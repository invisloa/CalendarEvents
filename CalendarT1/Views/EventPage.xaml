<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CalendarT1.Views.CustomControls"
             x:Class="CalendarT1.Views.EventPage"
             Title="{Binding PageTitle}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    
    <ContentPage.Resources>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Green" />
        </Style>
    </ContentPage.Resources>
    <ScrollView>

        <VerticalStackLayout >
        <Label 
            Text="{Binding HeaderText}"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="CenterAndExpand" />
        <Entry Placeholder="Title"
               x:Name="TitleEntry" 
               Text="{Binding Title}"/>
        <DatePicker x:Name="StartDatePicker"
                    Date="{Binding StartDateTime}"
                    />
        <TimePicker x:Name="StartTimePicker" Format="HH:mm"
                    Time="{Binding StartExactTime}"/>
        <DatePicker x:Name="EndDatePicker"
                    Date="{Binding EndDateTime}"
                    />
        <TimePicker x:Name="EndTimePicker"  Format="HH:mm"
                    Time="{Binding EndExactTime}"/>
        <!--Main Event Types Custom Control-->
        <controls:MainEventTypesCustomControl/>

        <!--User Event Types Custom Control-->
        <controls:EventTypesCustomControl/>
        
        
        <!--Selection for measurment types-->
        <StackLayout
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand"
            IsVisible="{Binding IsValueTypeSelected}">
            
            <StackLayout Orientation="Horizontal" >
                <Label Text="TYPE OF VALUE:"  VerticalOptions="Center" Margin="10"/>
                <Picker ItemsSource="{Binding MeasurementUnitsOC}" 
                        ItemDisplayBinding="{Binding DisplayName}"
                        SelectedItem="{Binding SelectedMeasurementUnit, Mode=TwoWay}" 
                        Margin="5" 
                        MinimumWidthRequest="200" 
                        HorizontalTextAlignment="Center"/>
            </StackLayout >

            <Entry Keyboard="Numeric"  Text="{Binding EntryText, Mode=TwoWay}"  HorizontalTextAlignment="End" FontSize="{Binding FontSize}" FontAttributes="Bold">
                <Entry.Behaviors>
                    <toolkit:NumericValidationBehavior 
                InvalidStyle="{StaticResource InvalidEntryStyle}"
                ValidStyle="{StaticResource ValidEntryStyle}"
                Flags="ValidateOnValueChanged"
                MaximumDecimalPlaces="10"/>
                </Entry.Behaviors>
                
            </Entry>
        </StackLayout>
        <Editor Placeholder="...DESCRIPTION..."
                x:Name="DescriptionEditor"  HorizontalTextAlignment="Center"
                Text="{Binding Description, Mode=TwoWay}"
                Margin="0, 10, 0, 0" />
        <Button Text="{Binding SubmitButtonText}"
                Command="{Binding SubmitEventCommand}"      
               Padding="15"/>

            <Button Text="ShareEvent"
                Command="{Binding ShareEventCommand}"
                IsVisible="{Binding IsEdit}"/>
        <Button Text="Temporary Delete Button"
                Command="{Binding DeleteEventCommand}"
                IsVisible="{Binding IsEdit}"/>
        <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                  IsVisible="{Binding IsEdit}"/>
    </VerticalStackLayout>

    </ScrollView>

</ContentPage>
