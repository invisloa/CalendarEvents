<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarT1.Views.ViewAllEventsPage"
             xmlns:models="clr-namespace:CalendarT1.Models.EventModels"
             xmlns:customControls="clr-namespace:CalendarT1.Views.CustomControls"
             Title="ViewAllEventsPage">
    <Grid>
        <Grid.RowDefinitions>
            <!-- for EventTypesCustomControl -->
            <RowDefinition Height="Auto"/>
            <!-- for Date Filtering -->
            <RowDefinition Height="Auto"/>
            <!-- for the horizontal StackLayout -->
            <RowDefinition Height="Auto"/>
            <!-- for CollectionView -->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
            <!--TODO ADD SEARCH OPTIONS-->

        <StackLayout>
            <!--Main Event Types Custom Control-->
            <customControls:MainEventTypesCustomControl/>
            <!-- All Events Types collection -->
            <customControls:EventTypesCustomControl/>
        </StackLayout>


        <!--Date Filters-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="1" Grid.Column="0" Text="{Binding TextFilterDateFrom}" HorizontalOptions="Center"/>
            <DatePicker  Grid.Row="1" Grid.Column="0" Date="{Binding FilterDateFrom}" HorizontalOptions="Center" Margin="20"/>
            
            <Label Grid.Row="1" Grid.Column="1" Text="{Binding TextFilterDateTo}" HorizontalOptions="Center"/>
            <DatePicker  Grid.Row="1" Grid.Column="1" Date="{Binding FilterDateTo}" HorizontalOptions="Center"/>
            </Grid>

        <!-- Events list layout -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Label Text="{Binding AboveEventsListText}" FontSize="30" HorizontalTextAlignment="Center" />
            <BoxView HeightRequest="10" Color="LightCyan" Margin="0,0,10,0"/>
            <Button Text="DELETE FIRST" Command="{Binding DeleteOneEventCommand}" Margin="0,0,10,0" />
            <Button Text="DELETE ALL BELOW" Command="{Binding DeleteAllEventsCommand}" Margin="0,0,10,0" />
        </StackLayout>

        <!-- EventsToShowList collection -->
        <CollectionView ItemsSource="{Binding EventsToShowList}" Grid.Row="3">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:EventModel">
                    <Grid Margin="0,5,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0" VerticalOptions="Center">
                            <Grid Grid.Column="0" VerticalOptions="Center">
                                <Label Text="{Binding StartDateTime, StringFormat='{0:dd/MM}'}" FontSize="15" Margin="10, 0, 0, 0" FontAttributes="Bold"/>
                                <Label Text="{Binding StartDateTime, StringFormat='{0:yyyy}'}" FontSize="15" Margin="15, 15, 0, 0" FontAttributes="Bold"/>
                                <Label Text="{Binding StartDateTime, StringFormat='{0: mm}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold" 
                                   Margin="50, 35, 0, 0" 
                                   />
                                <Label Text="{Binding StartDateTime, StringFormat='{0: tt}'}" 
                                   FontSize="10" 
                                   FontAttributes="Bold" 
                                   Margin="55, 55, 0, 0" 
                                   />
                                <Label Text="{Binding StartDateTime, StringFormat='{0: hh }'}" 
                                   Margin="0, 40, 0, 0" 
                                   FontSize="35" 
                                   FontAttributes="Bold" 
                                   />

                            </Grid>
                        </Grid>
                        <!--Consider changing this to normal color so it wont be blacked for endet events?? -->
                        <Frame BackgroundColor="{Binding EventVisibleColor}"
                                Grid.Column="1"
                                Grid.RowSpan="2" >
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.SelectEventCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <StackLayout Spacing="10">
                                <Label Text="{Binding Title}" FontSize="20" FontAttributes="Bold"/>
                                <Label Text="{Binding Description}" FontSize="15"/>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>