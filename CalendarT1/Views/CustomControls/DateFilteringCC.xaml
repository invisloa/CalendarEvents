<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarT1.Views.CustomControls.DateFilteringCC">
    <!--Date Filters-->
    <Grid>
        <!-- Define the columns for the Grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <!-- StackLayout for the left side -->
        <Frame Grid.Column="0" HorizontalOptions="Start" Margin="10, 10, 0, 10" BackgroundColor="{DynamicResource MainFrameBackgroundColor}">
              <StackLayout Orientation="Horizontal">
                <DatePicker Date="{Binding FilterDateFrom}" HorizontalOptions="Center" TextColor="{DynamicResource MainTextColor}"/>
            </StackLayout>
        </Frame>
        <StackLayout Grid.Column="1"  HorizontalOptions="Center" VerticalOptions="Center">
            <Label  Text="&lt;-DATE FILTERS-&gt;" TextColor="{DynamicResource MainTextColor}"/>
            <Entry Placeholder="SearchBox" HorizontalTextAlignment="Center"/>
        </StackLayout>
        <!-- StackLayout for the right side -->
        <Frame Grid.Column="2" HorizontalOptions="End" Margin="0, 10, 10, 10" BackgroundColor="{DynamicResource MainFrameBackgroundColor}">
            <StackLayout Orientation="Horizontal">
                <DatePicker Date="{Binding FilterDateTo}" HorizontalOptions="Center" TextColor="{DynamicResource MainTextColor}"/>
            </StackLayout>

        </Frame>
    </Grid>
</ContentView>
