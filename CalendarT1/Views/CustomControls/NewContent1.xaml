<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:type_models="clr-namespace:CalendarT1.Models.EventTypesModels;assembly=CalendarT1"
             x:Class="CalendarT1.Views.CustomControls.NewContent1">
            <CollectionView ItemsSource="{Binding EventTypesOC}" HorizontalOptions="CenterAndExpand">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="type_models:UserEventTypeModel">
                        <Button Text="{Binding EventTypeName}"  WidthRequest="100" TextColor="White" 
                                Command="{Binding BindingContext.SelectEventPriorityCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                                CommandParameter="{Binding}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" 
                                             Binding="{Binding IsSelectedToFilter}" 
                                             Value="True">
                                    <Setter Property="BackgroundColor" Value="{Binding EventTypeColor}" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button" 
                                             Binding="{Binding IsSelectedToFilter}" 
                                             Value="False">
                                    <Setter Property="BackgroundColor" Value="LightGray"/>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ContentView>
