<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:CalendarT1.Helpers.Converters"
             x:Class="CalendarT1.Views.CustomControls.SubTasksListCC"
             x:Name="root" >

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="boolToColorConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <FlexLayout BindableLayout.ItemsSource="{Binding SubTasksListOC}" 
                Direction="Row" 
                Wrap="Wrap" 
                AlignItems="Start"
                JustifyContent="Start">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Button Text="{Binding SubTaskTitle}" 
                        BackgroundColor="{Binding IsSubTaskCompleted, Converter={StaticResource boolToColorConverter}}"
                        Command="{Binding Path=BindingContext.SelectSubTaskCommand, Source={x:Reference root}}"
                        CommandParameter="{Binding .}"
                        Margin="5"/>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </FlexLayout>
</ContentView>
