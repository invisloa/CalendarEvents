<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:type_models="clr-namespace:CalendarT1.Models.EventModels;assembly=CalendarT1"
             x:Class="CalendarT1.Views.CustomControls.SubTasksCC">
    <StackLayout>
        <CollectionView ItemsSource="{Binding SubTasksOC}" HorizontalOptions="FillAndExpand" BackgroundColor="{DynamicResource MainBackgroundColor}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="3" />
                <!--Modify the Span to adjust number of items in a row-->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="type_models:SubTask">
                    <Button Text="{Binding Title}"
                            TextColor= "{DynamicResource MainTextColor}"
                            BackgroundColor= "{DynamicResource MainButtonBackgroundColor}"
                            Command="{Binding BindingContext.SelectSubTaskItemCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                            CommandParameter="{Binding}">
                    </Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>
