<?xml version="1.0" encoding="utf-8" ?>
<FlexLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="CalendarT1.Views.CustomControls.SelectableButtonFlexLayoutCC"
            Direction="Row" 
            Wrap="Wrap" 
            AlignItems="Center"
            JustifyContent="Center">

    <BindableLayout.ItemTemplate>
        <DataTemplate>
            <Button Text="{Binding ButtonText}" 
                    BackgroundColor="{DynamicResource MainButtonBackgroundColor}"
                    BorderWidth="{Binding ButtonBorder}"
                    Command="{Binding ButtonCommand}"
                    Opacity="{Binding ButtonOpacity}"
                    CommandParameter="{Binding .}"
                    Margin="5"/>
        </DataTemplate>
    </BindableLayout.ItemTemplate>
</FlexLayout>
