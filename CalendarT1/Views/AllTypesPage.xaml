<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CalendarT1.Models.EventTypesModels"
             x:Class="CalendarT1.Views.AllTypesPage"
             Title="AllTypesPage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding TypesToShowOC}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:IUserEventTypeModel">
                    <StackLayout>
                        <Frame BackgroundColor="{Binding EventTypeColor}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.EditSelectedTypeCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <StackLayout Spacing="10">
                                <Label Text="{Binding EventTypeName}" FontSize="20" FontAttributes="Bold"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>