                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectEventCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding Title}" FontSize="12" FontAttributes="Bold"/>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Friday Events -->
            <Frame>
                <StackLayout>
                    <Label Text="Friday" HorizontalOptions="Center" FontAttributes="Bold"/>
