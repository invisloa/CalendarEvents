<ContentPage x:Name="WeeklyScheduleListViewPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CalendarT1.ViewModels"
             xmlns:models="clr-namespace:CalendarT1.Models"
             xmlns:i="clr-namespace:System.Windows.Input;assembly=System.ObjectModel"
             xmlns:local="clr-namespace:CalendarT1.ViewModels.EventsViewModels"
             x:DataType="local:WeeklyEventsViewModel"
             x:Class="CalendarT1.Views.ViewWeeklyEvents"
             Title="Weekly events list">

    <ScrollView>
        <StackLayout>
            <!-- Monday Events -->
            <Frame>
                <StackLayout>
                    <Label Text="Monday" HorizontalOptions="Center" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding MondayEvents}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:EventModel">
                                <!-- Simplified Event View-->
                                <Frame BackgroundColor="{Binding PriorityLevel.PriorityColor}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectEventCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                        CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding Title}" FontSize="12" FontAttributes="Bold"/>
                                        <!-- Removed Description Label to maintain a simplified view -->
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Tuesday Events -->
            <Frame>
                <StackLayout>
                    <Label Text="Tuesday" HorizontalOptions="Center" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding TuesdayEvents}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:EventModel">
                                <!-- Simplified Event View-->
                                <Frame BackgroundColor="{Binding PriorityLevel.PriorityColor}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectEventCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                        CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding Title}" FontSize="12" FontAttributes="Bold"/>
                                        <!-- Removed Description Label to maintain a simplified view -->
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>
            <!-- Wednesday Events -->
            <Frame>
                <StackLayout>
                    <Label Text="Wednesday" HorizontalOptions="Center" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding WednesdayEvents}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:EventModel">
                                <Frame BackgroundColor="{Binding PriorityLevel.PriorityColor}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectEventCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding Title}" FontSize="12" FontAttributes="Bold"/>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Thursday Events -->
