                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding Title}" FontSize="12" FontAttributes="Bold"/>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Saturday Events -->
            <Frame>
                <StackLayout>
                    <Label Text="Saturday" HorizontalOptions="Center" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding SaturdayEvents}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:EventModel">
                                <Frame BackgroundColor="{Binding PriorityLevel.PriorityColor}">
                                    <Frame.GestureRecognizers>
